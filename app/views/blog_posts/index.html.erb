<h1>My blog</h1>
<% @blog_posts.each do |post| %>
    <div class="">
        <h2><%= link_to post.title, post %></h2>
        <% if post.draft? %>
            <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
        <% elsif post.scheduled? %>
            <div class="p-2 rounded bg-blue-100 text-blue-900">Scheduled</div>
        <% else %>
            <div class="p-2 rounded bg-green-100 text-green-900">Already published</div>
        <% end %>
        <p><%= post.content %></p>
    </div>
<% end %>

<% if @pagy.count > @pagy.items%>
    <div class="mt-16">
        <%== pagy_nav(@pagy) %>
    </div>
<% end %>